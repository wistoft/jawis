{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "build-tsc",
    "paths": {
      "#*": ["./*"]
    },
    "skipLibCheck": true,
    "target": "ES6"
  },
  "exclude": ["build-tsc", "build-webpack"]
}
