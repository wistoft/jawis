{
  "private": true,
  "description": "Jawis monorepo",
  "scripts": {
    "start": "concurrently --kill-others \"yarn -s javi\" \"yarn -s start:client\"",
    "start:client": "webpack serve -c packages/dev/devClient/webpack.dev.js",
    "": "",
    "lint": "eslint packages",
    "lint:fix": "eslint --fix packages",
    "pretty": "prettier -l \"packages/**/{*.{ts,tsx,js,jsx,json,md,css,html},.prettierrc}\"",
    "pretty:fix": "yarn -s pretty --write",
    ".": "",
    "compile": "yarn -s tsc -b",
    "recompile": "rimraf build-tsc && yarn -s tsc -b",
    "clean": "rimraf build-tsc",
    "..": "",
    "build": "yarn recompile && yarn build:source && yarn build:extra && yarn build:client",
    "build:source": "node packages/dev/scripts/build/build-main.js",
    "build:extra": "ts-node --transpile-only -r tsconfig-paths/register packages/dev/scripts/build-javi.ts",
    "build:client": "webpack -o build/publish/javi/client -c packages/javi-client/webpack.javi.js",
    "...": "",
    "alpha:start": "concurrently --kill-others \"yarn -s alpha:start:alone\" \"yarn -s start:client\"",
    "alpha:start:alone": "echo alpha && node build-alpha/javi/javiServerMain",
    "alpha:build": "yarn recompile && yarn alpha:build:source && yarn alpha:build:extra && yarn alpha:build:client",
    "alpha:build:fast": "yarn alpha:build:source && yarn alpha:build:extra && yarn alpha:build:client",
    "alpha:build:source": "node packages/dev/scripts/build/build-alpha-main.js && yarn alpha:build:paths",
    "alpha:build:paths": "yarn -s tsc-alias -p tsconfig.alpha.paths.json",
    "alpha:build:extra": "ts-node --transpile-only -r tsconfig-paths/register packages/dev/scripts/build-javi-alpha.ts",
    "alpha:build:client": "webpack -o build-alpha/javi/client -c packages/javi-client/webpack.javi.js"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@jawis/console": "^1.0.0",
    "@jawis/jagov": "^1.0.0",
    "@jawis/javi": "^1.0.0",
    "@octokit/core": "^3.2.5",
    "@types/gulp": "^4.0.8",
    "@types/gulp-bump": "^2.8.1",
    "@types/gulp-if": "^0.0.33",
    "@types/gulp-json-editor": "^2.2.33",
    "@types/gulp-replace": "^0.0.31",
    "@types/gulp-sourcemaps": "^0.0.34",
    "@types/merge2": "^1.3.0",
    "@types/react": "^16.14.4",
    "@types/react-dom": "^16.9.11",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "concurrently": "^6.0.0",
    "conventional-changelog-conventionalcommits": "^4.6.0",
    "del": "^6.0.0",
    "eslint": "^8.26.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "gulp": "^4.0.2",
    "gulp-bump": "^3.2.0",
    "gulp-if": "^3.0.0",
    "gulp-json-editor": "^2.5.4",
    "gulp-replace": "^1.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-ts-alias": "^1.3.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "lerna": "^3.22.1",
    "merge2": "^1.4.1",
    "npm-packlist": "1.1.12",
    "prettier": "^2.0.5",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "rimraf": "^3.0.2",
    "tsc-alias": "^1.6.11",
    "typescript": "^4.2.3",
    "vinyl-named": "^1.1.0"
  },
  "version": "0.0.0"
}
